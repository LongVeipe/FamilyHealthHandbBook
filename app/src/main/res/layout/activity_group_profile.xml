<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Conversation.ConversationActivity"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:backgroundTint="@android:color/transparent"
        app:elevation="0dp">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_ImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center">
            </de.hdodenhof.circleimageview.CircleImageView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black">
                </TextView>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editName_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/name_tv"
                    app:icon="@drawable/ic_baseline_edit_24"
                    app:iconTint="#9A9696"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/copyCode_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/code_tv"
                    app:icon="@drawable/ic_baseline_file_copy_24"
                    app:iconSize="20dp"
                    app:iconTint="#9A9696"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/members_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh sách thành viên"
                        android:textColor="@color/black"
                        android:textSize="22dp"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_groups_24"
                        android:tint="@color/black"
                        android:background="@color/light_gray"
                        app:contentPadding="5dp"
                        app:shapeAppearanceOverlay="@style/Circular">
                    </com.google.android.material.imageview.ShapeableImageView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/out_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rời khỏi nhóm"
                        android:textColor="@color/black"
                        android:textSize="22dp"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/out_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_send_to_mobile_24"
                        android:tint="@color/black"
                        android:background="@color/light_gray"
                        app:contentPadding="5dp"
                        app:shapeAppearanceOverlay="@style/Circular">
                    </com.google.android.material.imageview.ShapeableImageView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
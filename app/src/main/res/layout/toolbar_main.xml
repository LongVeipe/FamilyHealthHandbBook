<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    android:id="@+id/topAppBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    style="@style/Widget.MaterialComponents.Toolbar.Primary"
    android:background="@drawable/gradient_toolbar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_ImageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ic_baseline_account_box_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/appName_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/avatar_ImageView"
            android:layout_toLeftOf="@+id/sos_iv"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold">
        </TextView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sos_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/notification_iv"
            android:tint="@color/white"
            android:src="@drawable/sos"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">

        </de.hdodenhof.circleimageview.CircleImageView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="10dp"
            android:layout_alignParentRight="true"
            android:tint="@color/white"
            android:src="@drawable/ic_baseline_circle_notifications_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">

        </de.hdodenhof.circleimageview.CircleImageView>
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
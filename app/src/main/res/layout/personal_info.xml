<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginVertical="10dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gender_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:tint="@color/light_gray"
            android:background="@color/gray"
            app:shapeAppearanceOverlay="@style/Circular">
        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:id="@+id/gender_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gender_iv"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gender_iv"
            android:layout_below="@+id/gender_tv"
            android:text="Giới tính"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginVertical="10dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cake_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_cake_24"
            android:tint="@color/black"
            android:background="@color/light_gray"
            app:shapeAppearanceOverlay="@style/Circular">
        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:id="@+id/year_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cake_iv"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cake_iv"
            android:layout_below="@+id/year_TextView"
            android:text="Năm sinh"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginVertical="10dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/email_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_email_24"
            android:tint="@color/black"
            android:background="@color/light_gray"
            app:shapeAppearanceOverlay="@style/Circular">
        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:id="@+id/email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/email_iv"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/email_iv"
            android:layout_below="@+id/email_tv"
            android:text="Địa chỉ email"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/editInfo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa thông tin cá nhân"/>

</LinearLayout>